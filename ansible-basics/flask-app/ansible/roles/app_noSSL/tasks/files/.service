[Unit]
Description=Gunicorn instance to serve edu-flask-app
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/edu-flask-app
Environment="PATH=/home/ubuntu/edu-flask-app/venv/bin"
ExecStart=/home/ubuntu/edu-flask-app/venv/bin/gunicorn --workers 3 --bind unix:edu-flask-app.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target
